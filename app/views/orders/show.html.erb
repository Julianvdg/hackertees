<h1>Order from <%=@order.created_at.strftime('%m-%d-%Y') %></h1>
<br>
<table class ="table">
  <tr>
    <th>Product</th>
    <th>Unit Price</th>
    <th>Quantity</th>
    <th>Total</th>
  </tr>
  <% @order.order_lines.each do |line|  %>
  <tr>
    <td><%= link_to line.product.name, product_path(line.product) %></td>
    <td><%= number_to_currency(line[:unit_price], :locale => :fr)%></td>
    <td><%= line[:quantity] %></td>
    <td><%= number_to_currency(line[:sub_total], :locale => :fr)%></td>
  </tr>
<% end %>
</table>
<br>
<p><b>Sub total: <%=number_to_currency(@order.total_price, :locale => :fr)%></b></p>
