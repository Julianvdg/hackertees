
      <h4><%= product.name %></h4>
      <%= form_for order_line do |f| %>

            <%= f.number_field :quantity, value: order_line.quantity.to_i, min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
              <%= f.submit "Update Quantity" %>
              <%= link_to "Delete", order_line, { data: { confirm: "Are you sure you wish to delete the product '#{order_line.product.name}' from your cart?" }, method: :delete } %>
      <% end %>
    </div>

  </div>
</div>
