<h1>Products#index</h1>Go to cart <%= Order.find(session[:order_id]).order_lines.count %>
<% @products.each do |product| %>
<h2><%= product.name %></h2><a href="/cart/<%=product.id%>">Add To Cart</a>
<h4>EUR <%= product.price.round %>,-</h4>
<p><%= product.description %></p><br>
<h4><%= product.name %></small></h4>
   <%= form_for @orderline do |f| %>
   <%= f.number_field :quantity, value: 1, min: 1 %>
   <%= f.hidden_field :product_id, value: product.id %>
   <%= f.submit "Add to cart" %>
   <%end%>
<% end %>
