<%= form_for @user_profile do |f| %>
  <div class="field">
    <%= f.label :first_name, "First name", class: "label" %>
    <%= f.text_field :first_name, autofocus: true , class: "text-field" %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Last name", class: "label" %>
    <%= f.text_field :last_name, class: "text-field" %>
  </div>
  <div class="field">
    <%= f.label :address, "Address", class: "label" %>
    <%= f.text_field :address, class: "text-field" %>
  </div>
  <div class="field">
    <%= f.label :city, "City", class: "label" %>
    <%= f.text_field :city, class: "text-field" %>
  </div>
  <div class="field">
    <%= f.label :postal_code, "Postal code", class: "label" %>
    <%= f.text_field :postal_code, class: "text-field" %>
  </div>
  <div class="field">
    <%= f.label :country, "Country", class: "label" %>
    <%= f.text_field :country, class: "text-field" %>
  </div>
  
  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= f.submit "create profile", class: "submit-button" %>
  </div>
<% end %>