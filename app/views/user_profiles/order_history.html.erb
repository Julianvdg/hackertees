<h1>Order History for <% if current_user.user_profile %>
  <%= @user.first_name %>
<% else %>
<%= current_user.email %> </h1>
<% end %>

<table class ="table">
  <tr>
    <th>Date</th>
    <th>Products</th>
    <th>Subtotal</th>
    <th></th>
  </tr>
  <% @orders.each do |order|  %>
  <tr>
    <td><%= order.created_at.strftime('%d-%m-%Y') %></td>
    <td><% order.products.each do |product| %>
    <%= link_to product.name, product %><br>
  <% end %></td>
    <td><%= number_to_currency(order.total_price, :locale => :fr)%></td>
    <td><%= link_to "Info", order %>
  </tr>
<% end %>
</table>
